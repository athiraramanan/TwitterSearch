<style>
.TweetAction-stat {
    display: inline-block;
    font-size: 14px;
    vertical-align: text-bottom;
}
.retweet {
  background-image: url(data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvgâ€¦%203.997h22.99c2.208%200%204-1.79%204-4s-1.792-4-4-4z%22%2F%3E%3C%2Fsvg%3E);
}
.Tweet-actions {
  margin-top: 8.4px;
}
.Tweet-action {
  display: inline-block;
}
.tweet_card {
  overflow: hidden;
  cursor: pointer;
  background-color: #fff;
  border: 1px solid #e1e8ed;
  border-radius: 4px;
  max-width: 520px;
  margin-top: 20px;
}
.TweetAuthor-avatar {
    display: inline-block;
    top: 0;
    left: 0;
    width: 36px;
    height: 36px;
    overflow: hidden;
    background-color: transparent;
    border-radius: 4px;
}
.Avatar {
    max-width: 100%;
    max-height: 100%;
}
.TweetAuthor-name {
  font-weight: 700;
}
.TweetAuthor-screenName {
  color: #697882;
  font-size: 14px;
}
.Tweet-body {
  margin-top: 14px;
}
</style>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>

</p>

<p>
  <strong>Email:</strong>
  

  <strong>Tweets:</strong>
  Created AT : <!--%= tweets_data.to_json %-->
</p>

<% @tweets.each do |tweets_data| %>

<div class="tweet_card">
  <div class="tweet_heading">
    <span>User : </span>
    <%= image_tag(tweets_data.user.profile_banner_url, :alt => "rss feed") %>
    
  </div>
  <div class="tweet_body">
    <div class="TweetAuthor">
      <a class="TweetAuthor-link Identity u-linkBlend" data-scribe="element:user_link" href="">
          <span class="TweetAuthor-avatar Identity-avatar">
            <%= image_tag(tweets_data.user.profile_image_url, :alt => "rss feed", :class=>"Avatar") %>
          </span>
          <span class="TweetAuthor-name" >
            <%= tweets_data.user.name %>
          </span>
          <br/>
          <span class="TweetAuthor-screenName" >
            @<%= tweets_data.user.screen_name %>
          </span>
      </a>
    </div>
    <div class="Tweet-body">
      <p class="Tweet-text" lang="en" dir="ltr">
        <%= tweets_data.text %>
      </p>
    </div>
    <div class="Tweet-metadata dateline">
      <a href="#">
        <%= tweets_data.created_at %>
      </a>
    </div>
    <ul class="Tweet-actions">
      <li class="Tweet-action">
        <%= tweets_data.retweet_count %>
      </li>
      <li class="Tweet-action">
        <div class="retweet"></div>
        <span class="TweetAction-stat"><%= tweets_data.favorite_count %></span>
      </li>
      <!-- <li class="Tweet-action">
        <%= tweets_data.created_at %>
      </li> -->
    </ul>
  </div>
</div>
<% end %>




